{
  "name": "@isv-occ-payment/payment-widget",
  "version": "1.0.0",
  "private": true,
  "description": "ISV OCC Payment Widget",
  "repository": "git@bitbucket.org:tacitknowledge/isv-occ.git",
  "author": "Tacit Knowledge <developer@tacitknowledge.com>",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn build:ts && yarn bundle:dev",
    "build:prod": "yarn clean && yarn bundle:prod && yarn copy-bundle",
    "build:ts": "tsc -p tsconfig.json --noEmit",
    "bundle:dev": "webpack --mode development --devtool source-map --config webpack.dev.config.js",
    "bundle:prod": "webpack --mode production --config webpack.prod.config.js",
    "clean": "rimraf ./dist",
    "copy-bundle": "cp ./dist/isv-occ-payment.bundle.js ./widget/isv-occ-payment/js/isv-occ-payment.bundle.js",
    "prepack": "yarn build",
    "start": "webpack-dev-server -d --progress --open --config webpack.dev.config.js",
    "test": "jest",
    "test:coverage:unit": "yarn test:unit --coverage",
    "test:unit": "yarn test"
  },
  "dependencies": {
    "jwt-decode": "^2.2.0"
  },
  "devDependencies": {
    "@isv-occ-payment/occ-mock-storefront": "1.0.0",
    "@testing-library/dom": "^7.23.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@ts-tools/webpack-loader": "^1.1.4",
    "@types/googlepay": "^0.4.1",
    "@types/jquery": "^3.3.38",
    "@types/jwt-decode": "^2.2.1",
    "@types/knockout": "3.4.68",
    "@types/knockout.validation": "^0.0.37",
    "@types/node-fetch": "2.5.7",
    "css-loader": "^3.6.0",
    "html-loader": "^0.5.5",
    "html-webpack-externals-plugin": "^3.8.0",
    "html-webpack-plugin": "^4.3.0",
    "jquery": "^3.5.1",
    "knockout": "3.4.0",
    "knockout.validation": "2.0.3",
    "less-loader": "^6.1.1",
    "node-fetch": "2.6.0",
    "style-loader": "^1.2.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.1"
  }
}
